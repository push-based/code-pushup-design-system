{
  "name": "ds-cp-plugin",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "plugins/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/ds-cp-plugin",
        "main": "plugins/src/index.ts",
        "tsConfig": "plugins/tsconfig.lib.json",
        "assets": [
          "plugins/**/*.md"
        ]
      }
    },
    "repo-product:demo": {
      "command": "npx @code-pushup/cli collect --config=plugins/mocks/fixtures/minimal-repo/packages/sports/code-pushup.config.ts",
      "options": {
        "progress": false
      }
    },
    "repo-ds:demo": {
      "command": "npx @code-pushup/cli collect --config=/Users/michael_hladky/WebstormProjects/code-pushup-design-system/plugins/mocks/fixtures/minimal-repo/packages/design-system/code-pushup.config.ts",
      "options": {
        "progress": false
      }
    },
