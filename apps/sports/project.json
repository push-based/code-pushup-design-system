{
  "name": "sports",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/sports/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/sports",
        "index": "apps/sports/src/index.html",
        "browser": "apps/sports/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/sports/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/sports/public"
          }
        ],
        "styles": ["apps/sports/src/styles.css"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "sports:build:production"
        },
        "development": {
          "buildTarget": "sports:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "sports:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/sports/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "sports:build",
        "staticFilePath": "dist/apps/sports/browser",
        "spa": true
      }
    },
    "code-pushup": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx @code-pushup/cli --config=apps/sports/code-pushup.config.ts --tsconfig=tsconfig.base.json --progress=false --verbose"
        ]
      }
    },
    "code-pushup-ds-report": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx @code-pushup/cli --config=apps/sports/code-pushup.ds-adoption-reports.config.ts --tsconfig=tsconfig.base.json --progress=false"
        ]
      }
    }
  }
}
